@model AdminSeguridadMVC.Models.Usuario

@{
    ViewBag.Title = "Editar Usuario";
}

<div class="container">
    <h2>Editar Usuario</h2>

    <form asp-action="Edit" enctype="multipart/form-data">
        <input asp-for="UsuarioID" type="hidden" />

        <div class="form-group">
            <label asp-for="NombreUsuario">Usuario</label>
            <input asp-for="NombreUsuario" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="NombreCompleto">Nombre Completo</label>
            <input asp-for="NombreCompleto" class="form-control" />
        </div>

        <!-- Campo para cargar foto -->
        <div class="form-group">
            <label>Foto</label>
            <input type="file" name="fotoFile" class="form-control" />
        </div>

        <!-- Mostrar la foto actual -->
        @if (Model?.Foto != null)
        {
            <div class="form-group">
                <label>Foto Actual:</label><br />
                <img src="@Url.Action("ObtenerFoto", "Usuarios", new { id = Model.UsuarioID })" alt="Foto del Usuario" width="150" />
            </div>
        }

        <button type="submit" class="btn btn-success">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
