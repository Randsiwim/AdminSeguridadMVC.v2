
@model IEnumerable<AdminSeguridadMVC.Models.Permiso>

@{
    ViewBag.Title = "Gestión de Permisos";
}

<div class="container">
    <h1 class="page-title">Gestión de Permisos</h1>

    <a asp-action="Edit" class="btn btn-primary">Crear Nuevo Permiso</a>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre del Permiso</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var permiso in Model)
            {
                <tr>
                    <td>@permiso.PermisoID</td>
                    <td>@permiso.NombrePermiso</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@permiso.PermisoID" class="btn btn-success">Editar</a>
                        <a asp-action="Delete" asp-route-id="@permiso.PermisoID" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

